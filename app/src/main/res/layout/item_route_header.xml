<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_route_header"
    android:paddingBottom="@dimen/margin_all_standard"
    android:paddingLeft="@dimen/margin_all_standard"
    android:paddingRight="@dimen/margin_all_standard">

    <LinearLayout
        android:id="@+id/container_route_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_route_provider"
            android:layout_width="@dimen/width_route_provider_image"
            android:layout_height="@dimen/width_route_provider_image"
            android:contentDescription="@null"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/text_route_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_all_xsmall"
            android:textStyle="italic"
            tools:text="by Car2Go" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_route_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/size_all_xsmall"
        android:textSize="@dimen/size_all_big"
        android:textStyle="bold"
        tools:text="Bike sharing" />

    <LinearLayout
        android:id="@+id/container_route_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_route_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="@dimen/size_all_xsmall"
            android:textSize="@dimen/size_all_big"
            android:textStyle="bold"
            tools:text="12,50 â‚¬" />

        <TextView
            android:id="@+id/text_route_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="@dimen/size_all_xsmall"
            android:textSize="@dimen/size_all_normal"
            tools:text="25 min" />
    </LinearLayout>
</RelativeLayout>